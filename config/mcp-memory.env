# MCP Memory System Configuration
# PostgreSQL database settings for AI assistant memory storage

# Database connection settings
MEMORY_DB_HOST=localhost
MEMORY_DB_PORT=5432
MEMORY_DB_NAME=memory_system

# AI Assistant credentials (dedicated user with limited permissions)
MEMORY_DB_USER=ai_assistant
MEMORY_DB_PASSWORD=ai_memory_2025!

# Memory system settings
MEMORY_RETENTION_DAYS=365
MEMORY_MAX_SIZE_MB=100
MEMORY_SEMANTIC_SEARCH=true

# Logging and debugging
MEMORY_LOG_LEVEL=INFO
MEMORY_DEBUG_MODE=false

# Backup settings
MEMORY_AUTO_BACKUP=true
MEMORY_BACKUP_INTERVAL_HOURS=24
