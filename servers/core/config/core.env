# MCP Core Tools Server Configuration
# Configuration for project analysis and infrastructure tools

# Project analysis settings
MAX_PROJECT_DEPTH=10
MAX_FILES_ANALYZED=1000
ANALYSIS_CACHE_TTL_MINUTES=30

# Docker integration
DOCKER_ENABLED=true
DOCKER_TIMEOUT_SECONDS=30

# Git integration
GIT_ENABLED=true
GIT_MAX_COMMITS=100
GIT_INCLUDE_DIFFS=true

# Database analysis
DB_ANALYSIS_ENABLED=true
DB_CONNECTION_TIMEOUT=10

# API discovery
API_DISCOVERY_ENABLED=true
API_FRAMEWORKS=flask,fastapi,django,express

# Log analysis
LOG_ANALYSIS_ENABLED=true
LOG_MAX_SIZE_MB=50
LOG_RETENTION_DAYS=7

# Logging and debugging
CORE_TOOLS_LOG_LEVEL=INFO
CORE_TOOLS_DEBUG_MODE=false

# Performance settings
CONCURRENT_ANALYSIS_LIMIT=5
CACHE_ENABLED=true
